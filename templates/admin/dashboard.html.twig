    <!-- Icon Cards-->
    <div class="row">
    <div class="col-10">
        <h2>Количество отредактированных записей редакторами</h2>
        {% if editedDates|length > 0 %}
            <table class="table table-striped">
                <tr>
                    <th>Дата</th>
                {% for id, editor in editors %}
                    <th>{{ editor }}</th>
                {% endfor %}
                </tr>

                {% for updatedAt in editedDates %}
                    <tr>
                        <th>{{ updatedAt }}</th>
                        {% for id, editor in editors %}
                            <td>
                                {% if editorsWork[updatedAt][id] is defined %}
                                    {{ editorsWork[updatedAt][id] }}
                                {% else %}
                                    0
                                {% endif %}
                            </td>
                        {% endfor %}
                    </tr>
                {% endfor %}
            </table>
            <hr />
        {% endif %}
    </div>
    </div>

