{% form_theme form 'bootstrap_4_horizontal_layout.html.twig' %}

{% extends 'layout_admin.html.twig' %}

{% block title %}
    Edit {{ model }} :: admin
{% endblock %}

{% block breadcrumbs %}
    {% include 'admin/breadcrumb.html.twig' with {'last': 'Edit "' ~ row ~ '"'} %}
{% endblock %}

{% block body %}

    <h2>"{{ row.name }}" - связать с другим сортом винограда</h2>
    <hr />
    {% include 'admin/flashes.html.twig' %}

    <div class="alert alert-warning" role="alert">
        Внимание! После привязки сорт - "{{ row.name }}" будет заменён другим сортом и удалён из базы.

        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>


    {{ form_start(form) }}

    {{ form_rest(form) }}

    <hr />
    <div class="row">
        <div class="col-8">
            <a class="btn btn-primary" href="{{ path('backend_' ~ model ~ '_index') }}"><i class="fa fa-arrow-left"></i> Back to the list</a>
            <button class="btn btn-success" type="submit"><i class="fa fa-check"></i> GO!</button>
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}
