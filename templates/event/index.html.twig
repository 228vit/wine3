{% extends 'base.html.twig' %}

{% block title %}Event index{% endblock %}

{% block body %}
    <h1>Event index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>DateTime</th>
                <th>City</th>
                <th>Address</th>
                <th>Coordinates</th>
                <th>Description</th>
                <th>Slug</th>
                <th>Collage</th>
                <th>AnnouncePic</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for event in events %}
            <tr>
                <td>{{ event.id }}</td>
                <td>{{ event.name }}</td>
                <td>{{ event.dateTime ? event.dateTime|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ event.city }}</td>
                <td>{{ event.address }}</td>
                <td>{{ event.coordinates }}</td>
                <td>{{ event.description }}</td>
                <td>{{ event.slug }}</td>
                <td>{{ event.collage }}</td>
                <td>{{ event.announcePic }}</td>
                <td>
                    <a href="{{ path('app_event_show', {'id': event.id}) }}">show</a>
                    <a href="{{ path('app_event_edit', {'id': event.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_event_new') }}">Create new</a>
{% endblock %}
