{% extends 'layout_front_event.html.twig' %}

{% block title %}Events{% endblock %}

{% block body %}
    <section class="sec-page sec-calend">
        <div class="container-def">
            <div class="sec-calend__wrap">
                <div class="sec-calend__top calend-top">
                    <div class="calend-top__duration">
                        <div class="tabs-2">
                            <div class="tabs-2__el">Год</div>
                            <div class="tabs-2__el active">Месяц</div>
                        </div>
                        <div class="btn-icon calend-top__settigns">
                            <svg width="17" height="17" viewBox="0 0 17 17" fill="none"
                                 xmlns="http://www.w3.org/2000/svg">
                                <path d="M2.875 8.5H1M2.875 8.5C2.875 9.53553 3.71447 10.375 4.75 10.375C5.78553 10.375 6.625 9.53553 6.625 8.5M2.875 8.5C2.875 7.46447 3.71447 6.625 4.75 6.625C5.78553 6.625 6.625 7.46447 6.625 8.5M14.125 14.125C14.125 13.0895 13.2855 12.25 12.25 12.25C11.2145 12.25 10.375 13.0895 10.375 14.125M14.125 14.125C14.125 15.1605 13.2855 16 12.25 16C11.2145 16 10.375 15.1605 10.375 14.125M14.125 14.125H16M10.375 14.125H1M6.625 8.5H16M14.125 2.875C14.125 1.83947 13.2855 1 12.25 1C11.2145 1 10.375 1.83947 10.375 2.875M14.125 2.875C14.125 3.91053 13.2855 4.75 12.25 4.75C11.2145 4.75 10.375 3.91053 10.375 2.875M14.125 2.875L16 2.875M10.375 2.875H1"
                                      stroke="white" stroke-width="1.4" stroke-linecap="round" stroke-linejoin="round"/>
                            </svg>
                        </div>
                    </div>
                    <div class="calend-top__filt">
                        <div class="calend-top__filt-content">
                            <div class="calend-top__filt-top">
                                <div class="calend-top__filt-title">Фильтра календаря</div>
                                <div class="calend-top__filt-close">
                                    <svg width="29" height="29" viewBox="0 0 29 29" fill="none"
                                         xmlns="http://www.w3.org/2000/svg">
                                        <rect y="26.5831" width="37.5942" height="3.41765" rx="1.70883"
                                              transform="rotate(-45 0 26.5831)" fill="#0842B4"/>
                                        <rect width="37.5942" height="3.41765" rx="1.70883"
                                              transform="matrix(-0.707107 -0.707107 -0.707107 0.707107 29 26.5831)"
                                              fill="#0842B4"/>
                                    </svg>
                                </div>
                            </div>
                            <select class="select-el calend-top__select">
                                <option>Вебинары</option>
                                <option>Вебинары 2</option>
                                <option>Вебинары 3</option>
                                <option>Вебинары 4</option>
                            </select>
                            <select class="select-el calend-top__select">
                                <option>Все поставщики</option>
                                <option>Вебинары 2</option>
                                <option>Вебинары 3</option>
                                <option>Вебинары 4</option>
                            </select>
                            <select class="select-el calend-top__select calend-top__select_2">
                                <option>Город</option>
                                <option>Вебинары 2</option>
                                <option>Вебинары 3</option>
                                <option>Вебинары 4</option>
                            </select>
                            <select class="select-el calend-top__select calend-top__select_2">
                                {% for mnum, month in months %}
                                    <option value="{{ month }}" {{ mnum == currentMonth ? 'selected' : '' }}>{{ month }}</option>
                                {% endfor %}
                            </select>
                            <select class="select-el calend-top__select calend-top__select_date">
                                {% for year in years %}
                                <option value="{{ year }}" {{ year == currentYear ? 'selected' : '' }}>{{ year }}</option>
                                {% endfor %}
                            </select>
                            <div class="calend-top__filt-bottom"><a class="calend-top__filt-btn btn-def btn-def_2"
                                                                    href="#"><span>Сохранить</span></a>
                                <div class="btn-icon-2 calend-top__filt-reset">
                                    <svg width="27" height="24" viewBox="0 0 27 24" fill="none"
                                         xmlns="http://www.w3.org/2000/svg">
                                        <path d="M14.9744 22C20.5114 22 25 17.5228 25 12C25 6.47715 20.5114 2 14.9744 2C9.43735 2 4.94872 6.47715 4.94872 12C4.94872 13.8156 5.43382 15.5182 6.2818 16.9859M2 15.5294L6.2818 16.9859M8.28114 12.4508L6.68382 17.1226L6.2818 16.9859"
                                              stroke="#084ED7" stroke-width="2.7" stroke-linecap="round"
                                              stroke-linejoin="round"/>
                                    </svg>
                                </div>
                            </div>
                        </div>
                    </div>
                    <a class="calend-top__btn btn-def" href="#"><span>+ Добавить </span></a>
                </div>

                <div class="sec-calend__content">
                    <div class="sec-calend__calend">
                        <div class="calend">
                            <div class="calend__row calend__row_main">
                                <div class="calend__col">
                                    <div class="calend__title">Понедельник</div>
                                </div>
                                <div class="calend__col">
                                    <div class="calend__title">Вторник</div>
                                </div>
                                <div class="calend__col">
                                    <div class="calend__title">Среда</div>
                                </div>
                                <div class="calend__col">
                                    <div class="calend__title">Четверг</div>
                                </div>
                                <div class="calend__col">
                                    <div class="calend__title">Пятница</div>
                                </div>
                                <div class="calend__col weekend">
                                    <div class="calend__title">Суббота</div>
                                </div>
                                <div class="calend__col weekend">
                                    <div class="calend__title">Воскресенье</div>
                                </div>
                            </div>
                            {% set d = 1 %}
                            <div class="calend__row">
                            {% for cday in calendar %}
                                {% if false == cday.event %}
                                    <div class="calend__col {{ cday.isCurrentMonth ? '' : 'disabled' }} {{ cday.isWeekend ? 'weekend' : '' }}">
                                        <div class="calend__date">{{ cday.day }}</div>
                                    </div>
                                {% else %}
                                    <div class="calend__col active eventClick" data-rel="{{ path('front_event_show', { slug: cday.event.slug }) }}">
                                        <div class="calend__date">{{ cday.day }}</div>
                                        <div class="calend__title2">
                                            {{ cday.event.name }}
                                        </div>
                                        <div class="calend__time">16:30- 18:00</div>
                                        <div class="calend__points">
                                            <a href="{{ path('front_event_show', { slug: cday.event.slug }) }}">
                                            <svg width="18" height="4" viewBox="0 0 18 4" fill="none" xmlns="http://www.w3.org/2000/svg">
                                                <circle cx="2" cy="2" r="2" fill="white"></circle>
                                                <circle cx="9" cy="2" r="2" fill="white"></circle>
                                                <circle cx="16" cy="2" r="2" fill="white"></circle>
                                            </svg>
                                            </a>
                                        </div>
                                    </div>
                                    </a>
                                {% endif %}

                                {% set d = d + 1 %}
                                {% if d > 7 %}
                                    {% set d = 1 %}
                                    </div><!-- class="calend__row" -->
                                    <div class="calend__row">
                                {% endif %}
                            {% endfor %}
                            </div><!-- class="calend__row" -->

                        </div>
                    </div>
                    <div class="sec-calend__right event-card"><img class="event-card__img"
                                                                   src="{{ asset('/bigwine/img/eventCard.jpg') }}" alt="">
                        <div class="event-card__body">
                            <div class="event-card__top">
                                <div class="event-card__date title-def title-def_med2">26 Октября / 16:30</div>
                                <div class="event-card__text text-def">Рождественская выставка красного вина, на лучшей
                                    локации
                                </div>
                                <div class="event-card__locate icon-text icon-text_2">
                                    <svg class="icon-text__icon" width="14" height="14" viewBox="0 0 14 14" fill="none"
                                         xmlns="http://www.w3.org/2000/svg">
                                        <path d="M9.1 4.9C9.1 3.71 8.19 2.8 7 2.8C5.81 2.8 4.9 3.71 4.9 4.9C4.9 6.09 5.81 7 7 7C8.19 7 9.1 6.09 9.1 4.9ZM6.3 4.9C6.3 4.48 6.58 4.2 7 4.2C7.42 4.2 7.7 4.48 7.7 4.9C7.7 5.32 7.42 5.6 7 5.6C6.58 5.6 6.3 5.32 6.3 4.9Z"
                                              fill="#454F56"/>
                                        <path d="M6.23 11.41L7 12.11L7.77 11.41C10.5 8.96 11.9 6.86 11.9 4.9C11.9 2.1 9.73 0 7 0C4.27 0 2.1 2.1 2.1 4.9C2.1 6.86 3.5 8.96 6.23 11.41ZM7 1.4C8.96 1.4 10.5 2.87 10.5 4.9C10.5 6.3 9.38 8.12 7 10.22C4.62 8.12 3.5 6.3 3.5 4.9C3.5 2.87 5.04 1.4 7 1.4Z"
                                              fill="#454F56"/>
                                        <path d="M11.41 8.96C11.13 9.38 10.78 9.73 10.43 10.15C11.76 10.43 12.6 10.85 12.6 11.2C12.6 11.76 10.08 12.6 7 12.6C3.92 12.6 1.4 11.76 1.4 11.2C1.4 10.85 2.24 10.43 3.57 10.15C3.22 9.73 2.87 9.31 2.59 8.96C0.98 9.45 0 10.22 0 11.2C0 12.95 3.15 14 7 14C10.85 14 14 12.95 14 11.2C14 10.22 13.02 9.45 11.41 8.96Z"
                                              fill="#454F56"/>
                                    </svg>
                                    <span>Москва, ул. Борисова 58/2</span></div>
                            </div>
                            <div class="event-card__text2 text-def text-def_2">Телеграмм бот Tripicon - полностью
                                копирует весь функционал платформы. Вы так же можете связать свой аккаунт в телеграмм с
                                профилем Tripicon
                            </div>
                            <a class="event-card__btn btn-def btn-def_3" href="#"><span>Подробнее</span></a><img
                                    class="event-card__brand" src="{{ asset('/bigwine/img/1.png') }}" alt="">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>{% endblock %}

{% block extra_scripts %}
    <script>
        $(document).ready(function() {
            $('.eventClick').on('click', function (e) {
                window.location = $(this).attr('data-rel');
            })
        })
    </script>
{% endblock %}
